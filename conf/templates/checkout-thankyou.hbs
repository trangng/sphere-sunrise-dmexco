<!DOCTYPE html>
<html lang="en">
<head>
    {{> common/htmlhead}}
</head>

<body>
{{> common/checkout-header}}

<div class="checkout-thankyou">
    <div class="container">
        <div class="thankyou-page-title">{{content.thankyouTitle}}</div>
        <div class="thankyou-page-content">
            <div class="row">
                <div class="col-md-6">
                    <span class="thankyou-confirmation">{{content.emailSentTo}}o <span class="thankyou-email">{{content.email}}</span><br>{{content.emailSentToEnding}}</span>
                </div>
                <div class="col-md-6">
                    <ul class="list-inline text-right thankyou-buttons">
                        {{!-- <li><button type="button" class="print-receipt-btn">{{content.receiptBtn}}</button></li> --}}
                        <li><a href="#" class="thankyou-continue-shopping-btn">{{content.continueShoppingBtn}}</a></li>
                    </ul>
                </div>
            </div>
            <div class="thankyou-order-details">
                <div class="order-details-title">{{content.orderDetailsTitle}}</div>
                <div class="order-number-date">
                    <span class="number-date-title">{{content.orderNumberTitle}}<br>{{content.orderDateTitle}}</span>
                    <span class="black-p">{{content.orderNumber}}<br>{{content.orderDate}}</span>
                </div>
            </div>
            <div class="thankyou-order-summary">
                <div class="row">
                    <div class="col-sm-4 checkout-first-col">
                        <div class="checkout-summary">
                            <div class="text-uppercase">
                                <span class="checkout-summary-title">{{content.shippingAddress.text}}</span>
                            </div>
                            <div class="checkout-summary-text">
                                <span>{{content.shippingAddress.name}}</span><br>
                                <span>{{content.shippingAddress.street}}</span><br>
                                <span>{{content.shippingAddress.city}}</span><br>
                                <span>{{content.shippingAddress.region}}</span><br>
                                <span>{{content.shippingAddress.postCode}}</span><br>
                                <span>{{content.shippingAddress.country}}</span>
                            </div>
                            <div>
                                <span>{{content.shippingAddress.phoneTitle}}:</span><span> {{content.shippingAddress.phone}}</span><br>
                                <span>{{content.shippingAddress.emailTitle}}:</span><span> {{content.shippingAddress.email}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 checkout-second-col">
                        <div class="checkout-summary">
                            <div class="text-uppercase">
                                <span class="checkout-summary-title">{{content.billingAddress.text}}</span>
                            </div>
                            <div class="checkout-summary-text">
                                <span>{{content.billingAddress.name}}</span><br>
                                <span>{{content.billingAddress.street}}</span><br>
                                <span>{{content.billingAddress.city}}</span><br>
                                <span>{{content.billingAddress.region}}</span><br>
                                <span>{{content.billingAddress.postCode}}</span><br>
                                <span>{{content.billingAddress.country}}</span>
                            </div>
                            <div>
                                <span>{{content.billingAddress.phoneTitle}}:</span><span> {{content.shippingAddress.phone}}</span><br>
                                <span>{{content.billingAddress.emailTitle}}:</span><span> {{content.shippingAddress.email}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 checkout-third-col">
                        <div class="checkout-summary">
                            <div class="text-uppercase">
                                <span class="checkout-summary-title">{{content.shippingMethod.text}}</span>
                            </div>
                            <div class="checkout-summary-text">
                                <span>{{content.shippingMethod.description}}</span>
                            </div>
                        </div>
                        <div class="checkout-summary">
                            <div class="text-uppercase">
                                <span class="checkout-summary-title">{{content.paymentDetails.text}}</span>
                            </div>
                            <div class="checkout-summary-text">
                                <span>{{content.paymentDetails.type}}</span><br>
                                <span>{{content.paymentDetails.name}}</span><br>
                                <span>{{content.paymentDetails.card}}</span><br>
                                <span>{{content.paymentDetails.number}}</span><br>
                                <span>{{content.paymentDetails.date}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="confirmation-products-title">
                    <div class="row">
                        <div class="row text-uppercase hidden-xs cart-items-title">
                            <div class="col-sm-6">
                                <span>{{content.cartItems.description}}</span>
                            </div>
                            <div class="col-sm-2 text-center">
                                <span>{{content.cartItems.quantity}}</span>
                            </div>
                            <div class="col-sm-2 text-right">
                                <span>{{content.cartItems.price}}</span>
                            </div>
                            <div class="col-sm-2 text-right">
                                <span>{{content.cartItems.totalPrice}}</span>
                            </div>
                        </div>
                    </div>
                    {{#each content.cartItems.list}}
                        <div class="row single-cart-item">
                            <div class="col-sm-1 col-xs-4 product-img-col">
                                <img class="img-responsive cart-item-img" src="{{../meta.assetsPath}}img/blue-jacket.jpg" alt="cart item image">
                            </div>
                            <div class="col-sm-3 col-xs-8 product-info-text">
                                <p class="cart-item-name">{{nameHeadline}}<br>{{nameSubline}}</p>
                                <p class="grey-p">{{sku}}</p>
                                <p class="cart-color-size">{{colorTitle}}<span class="black-p">{{color}}</span><br>{{sizeTitle}}<span class="black-p">{{size}}</span></p>
                            </div>
                            <div class="col-sm-2 col-sm-offset-2 col-xs-12 text-center quantity-counter">
                                <span class="visible-xs">Quantity:</span>
                                <span class="quantity-number">{{quantity}}</span>
                            </div>
                            <div class="col-sm-2 col-xs-7">
                                <div class="text-right cart-item-price">
                                    <span class="visible-xs xs-price-title">{{priceTitle}}</span>
                                    <span>{{price}}</span>
                                </div>
                            </div>
                            <div class="col-sm-2 col-xs-5">
                                <div class="text-right cart-item-price">
                                    <span class="visible-xs xs-price-title">{{totalPriceTitle}}</span>
                                    <span>{{totalPrice}}</span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="total-price-calc">
                                <div class="row text-right payment-code-applied">
                                    <span class="payment-code-title">Promotion code applied:</span>
                                    <span class="payment-code">Sunny Sale</span>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10 col-xs-7">
                                        <div class="text-right subtotal">
                                            <span class="subtotal-title">{{content.totalSum.subtotalTitle}}</span>
                                        </div>
                                        <div class="text-right">
                                            <span class="order-discount">{{content.totalSum.orderDiscountTitle}}</span>
                                        </div>
                                        <div class="text-right delivery-info">
                                            <span class="delivery-info-title">{{content.totalSum.deliveryOption}}</span>
                                        </div>
                                        <hr class="total-divider">
                                        <div class="text-right">
                                            <span>{{content.totalSum.taxTitle}}</span>
                                        </div>
                                        <div class="text-right">
                                            <span class="order-total">{{content.totalSum.orderTotalTitle}}</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 col-xs-5 text-right">
                                        <div>
                                            <span>{{content.totalSum.subtotal}}</span>
                                        </div>
                                        <div>
                                            <span class="order-discount">{{content.totalSum.orderDiscount}}</span>
                                        </div>
                                        <div>
                                            <span>{{content.totalSum.delivery}}</span>
                                        </div>
                                        <hr>
                                        <div>
                                            <span>{{content.totalSum.tax}}</span>
                                        </div>
                                        <div>
                                            <span class="order-total">{{content.totalSum.orderTotal}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <ul class="list-inline text-right thankyou-buttons">
                    {{!-- <li><button type="button" class="print-receipt-btn">{{content.receiptBtn}}</button></li> --}}
                    <li><a href="#" class="thankyou-continue-shopping-btn">{{content.continueShoppingBtn}}</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

{{> common/checkout-footer}}
{{> common/htmlscripts}}
</body>
</html>