<!DOCTYPE html>
<html lang="en">

<head>
    {{> common/htmlhead}}
</head>

<body>

<div class="darkbg hidden"></div>
{{> common/header}}
<div class="cart-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <div class="current-in-bag">
                    <span><img class="bag-icon-lg" src="{{meta.assetsPath}}img/hand-bag-2-black.png" alt="bag icon"></span>
                    <span class="text-uppercase your-bag-txt">{{content.static.yourBag}}</span>
                    <span class="items-total-txt">{{content.itemsTotal}}</span>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div class="checkout-now">
                    <button id="cart-checkoutnow-btn" class="pull-right text-uppercase checkout-now-btn">{{content.static.checkoutButtonLabel}}</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="cart-content">
                    <div class="row text-uppercase hidden-xs cart-items-title">
                        <div class="col-sm-6">
                            <span>{{content.static.productDescriptionTitle}}</span>
                        </div>
                        <div class="col-sm-2">
                            <span>{{content.static.quantityTitle}}</span>
                        </div>
                        <div class="col-sm-2 text-right">
                            <span>{{content.static.priceTitle}}</span>
                        </div>
                        <div class="col-sm-2 text-right">
                            <span>{{content.static.totalPriceTitle}}</span>
                        </div>
                    </div>
                    {{#each content.cartItems.list}}
                        <div class="row single-cart-item">
                            <form method="post" action="{{content.editQuantityFormUrl}}">
                                <div class="col-sm-1 col-xs-4 product-img-col">
                                    <img class="img-responsive cart-item-img" src="{{imageUrl}}" alt="cart item image">
                                </div>
                                <div class="col-sm-3 col-xs-8 product-info-text">
                                    <p class="cart-item-name">{{nameHeadline}}<br>{{nameSubline}}</p>
                                    <p class="grey-p">{{sku}}</p>
                                    <p class="cart-color-size">{{content.static.colorTitle}}<span class="black-p">{{color}}</span><br>{{content.static.sizeTitle}}<span class="black-p">{{size}}</span></p>
                                    <p class="cart-item-availability grey-p hidden-xs"><span class="glyphicon glyphicon-ok-sign"></span>{{content.static.availableLabel}}</p>
                                    <p class="cart-item-availability grey-p visible-xs"><span class="glyphicon glyphicon-ok-sign"></span>{{content.static.availableLabel}}</p>
                                </div>
                                <div class="col-sm-2 col-xs-6 text-center cart-edit-delete">
                                    <div class="text-uppercase edit-delete-section">
                                        <button id="line-item-edit-button" name="subject" value="edit"><img class="cart-action-icon" src="{{../meta.assetsPath}}img/edit-1.png" alt="delete">{{content.static.editLabel}}</button>
                                    </div>
                                    <div class="text-uppercase edit-delete-section">
                                        <button id="line-item-delete-button" name="subject" value="delete"><img class="cart-action-icon" src="{{../meta.assetsPath}}img/delete-1.png" alt="delete">{{content.static.deleteLabel}}</button>
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-6">
                                    <div class="quantity-spinner">
                                        <input type="hidden" name="lineItemId" value="{{lineItemId}}">
                                        <span id="{{cartQuantityDecrementId}}" class="input-number-decrement">â€“</span><input id="{{cartQuantityValueId}}" class="input-number" type="text" value="{{quantity}}" min="1" max="10" name="quantity"><span id="{{cartQuantityIncrementId}}" class="input-number-increment">+</span>
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-7">
                                    <div class="text-right cart-item-price">
                                        <span class="visible-xs xs-price-title">{{priceTitle}}</span>
                                        {{#if priceOld}}<span class="discounted-price">{{priceOld}}</span>{{/if}}
                                        <span>{{price}}</span>
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-5">
                                    <div class="text-right cart-item-price">
                                        <span class="visible-xs xs-price-title">{{totalPriceTitle}}</span>
                                        <span>{{totalPrice}}</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    {{/each}}
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="text-right promotion-info">
                                <span class="text-uppercase promo-info-text" title="{{content.cartItems.discountTooltip}}">{{content.static.promoDiscount}}<img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon"></span>
                                <input id="promo-code" type="text">
                                <button id="cart-apply-promocode-btn" class="text-uppercase promo-apply-btn">{{content.static.applyBtn}}</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="total-price-calc">
                                <div class="row">
                                    <div class="col-xs-12 delivery-xs">
                                        <span class="visible-xs text-right delivery-est" title="{{content.static.deliveryTooltip}}">{{content.static.deliveryEstimate}}<img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon"></span>
                                    </div>
                                    <div class="col-sm-10 col-xs-8">
                                        <div class="text-right subtotal">
                                            <span class="subtotal-title">{{content.static.subtotalTitle}}</span>
                                        </div>
                                        <div class="text-right">
                                            <span class="order-discount">{{content.static.orderDiscountTitle}}</span>
                                        </div>
                                        <div class="text-right delivery-info">
                                            <span class="delivery-est hidden-xs" title="{{content.static.deliveryTooltip}}">{{content.static.deliveryEstimate}}<img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon"></span>
                                            <span class="delivery-info-title">{{content.static.deliveryOption}}</span>
                                        </div>
                                        <hr class="total-divider">
                                        <div class="text-right">
                                            <span>{{content.static.taxTitle}}</span>
                                        </div>
                                        <div class="text-right">
                                            <span class="order-total">{{content.static.orderTotalTitle}}</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 col-xs-4 text-right">
                                        <div>
                                            <span>{{content.cartItems.subtotal}}</span>
                                        </div>
                                        <div>
                                            <span class="order-discount">{{content.cartItems.orderDiscount}}</span>
                                        </div>
                                        <div>
                                            <span>{{content.cartItems.delivery}}</span>
                                        </div>
                                        <hr>
                                        <div>
                                            <span>{{content.cartItems.tax}}</span>
                                        </div>
                                        <div>
                                            <span class="order-total">{{content.cartItems.orderTotal}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row bottom-cart-btns">
            <div class="col-sm-6 col-xs-12 visible-xs">
                <div class="checkout-now-bottom">
                    <a href="#"><button id="cart-checkout-btn" class="pull-right text-uppercase checkout-now-btn">{{content.checkoutBtn}}</button></a>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div>
                    <a href="#"><button id="cart-continueshopping-btn-xs" class="text-uppercase continue-shopping-btn">{{content.static.continueShoppingBtn}}</button></a>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12 hidden-xs">
                <div class="checkout-now-bottom">
                    <a href="#"><button id="cart-checkout-btn" class="pull-right text-uppercase checkout-now-btn">{{content.static.checkoutBtn}}</button></a>
                </div>
            </div>
        </div>
    </div>
</div>
{{> catalog/wishlist}}
{{> common/footer}}
{{> common/htmlscripts}}
</body>

</html>