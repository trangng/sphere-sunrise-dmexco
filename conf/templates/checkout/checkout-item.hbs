<div class="order">
    <div class="order-summary-items">
        {{#each content.cartItems.list}}
            <div class="order-summary-item">
                <div class="row">
                    <div class="col-xs-4">
                        <div class="order-summary-img">
                            <img class="img-responsive" src="{{imageUrl}}" alt="">
                        </div>
                    </div>
                    <div class="col-xs-8">
                        <div class="summary-item-info">
                            <span class="checkout-product-name">{{nameHeadline}}</span><br>
                            <span class="checkout-product-name">{{nameSubline}}</span>
                        </div>
                        <div class="sku-code">
                            <span>{{sku}}</span>
                        </div>
                        <div class="checkout-color-size">
                            <span class="checkout-color">{{content.static.colorTitle}}: </span><span>{{color}}</span><br>
                            <span class="checkout-size">{{content.static.sizeTitle}}: </span><span>{{size}}</span>
                        </div>
                    </div>
                </div>
                <div class="order-item-price">
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="text-right">
                                <span class="text-uppercase pricing-titles">{{content.static.quantityTitle}}</span><br>
                                <span>{{quantity}} x</span>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="text-right order-item-value">
                                <span class="text-uppercase pricing-titles">{{content.static.priceTitle}}</span><br>
                                {{#if priceOld}}<span class="checkout-discounted-price">{{priceOld}}</span><br>{{/if}}
                                <span>{{price}}</span>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="text-right order-item-value">
                                <span class="text-uppercase pricing-titles">{{content.static.totalPriceTitle}}</span><br>
                                <span>{{totalPrice}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="checkout-total-price">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-right checkout-promo-code">
                    <span class="text-uppercase promo-code-applied">{{content.static.promoCodeTitle}}</span>
                    <span class="text-uppercase">{{content.promoCode}}</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-7">
                <div class="text-right checkout-price-text">
                    <span>{{content.messages.cdp.subtotalTitle}}</span><br>
                    <span>{{content.static.orderDiscountTitle}}</span><br>
                    <span>{{content.static.deliveryOption}}</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
                <div class="text-right checkout-price-digits">
                    <span>{{content.cartItems.subtotal}}</span><br>
                    <span>{{content.cartItems.orderDiscount}}</span><br>
                    <span>{{content.cartItems.delivery}}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-7">
            <div class="text-right order-tax-total-text">
                <span>{{content.static.taxTitle}}</span><br>
                <span class="total-order-value">{{content.static.orderTotalTitle}}</span>
            </div>
        </div>
        <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
            <div class="text-right order-tax-total-digits">
                <span>{{content.cartItems.tax}}</span><br>
                <span class="total-order-value">{{content.cartItems.orderTotal}}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div>
                <span class="text-uppercase pull-right edit-quantity-order"><a href="{{content.cartItems.cartDetailPageUrl}}">{{content.messages.checkout.editMyShippingCart}}</a></span>
            </div>
        </div>
    </div>
</div>